rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Function to get the user's role from their profile
    function getRole() {
      return get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role;
    }

    // Allow read access to all curriculum data for authenticated users
    // Allow full CRUD for admin users
    match /{collection=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && getRole() == 'admin';
    }

    // Specific rules for the 'profiles' collection
    match /profiles/{userId} {
      // Allow users to read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Allow users to update their own profile
      allow update: if isAuthenticated() && request.auth.uid == userId;
      // Allow creation of profiles only by the `handle_new_user` function (via `request.auth.uid` matching `userId`)
      // This rule is implicitly handled by the `request.auth.uid == userId` for the initial write
      allow create: if isAuthenticated() && request.auth.uid == userId;
      // Admins can read and update any profile
      allow read, update: if isAuthenticated() && getRole() == 'admin';
    }

    // Specific rules for 'student_progress'
    match /student_progress/{progressId} {
      // Users can create and update their own progress
      allow create, update: if isAuthenticated() && request.auth.uid == request.resource.data.user_id;
      // Users can read their own progress
      allow read: if isAuthenticated() && request.auth.uid == resource.data.user_id;
      // Admins can read all student progress
      allow read: if isAuthenticated() && getRole() == 'admin';
    }

    // Specific rules for 'quiz_attempts'
    match /quiz_attempts/{attemptId} {
      // Users can create and update their own quiz attempts
      allow create, update: if isAuthenticated() && request.auth.uid == request.resource.data.user_id;
      // Users can read their own quiz attempts
      allow read: if isAuthenticated() && request.auth.uid == resource.data.user_id;
      // Admins can read all quiz attempts
      allow read: if isAuthenticated() && getRole() == 'admin';
    }
  }
}