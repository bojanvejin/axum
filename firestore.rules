rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access for curriculum structure
    match /phases/{phaseId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }

    match /modules/{moduleId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }

    match /lessons/{lessonId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }

    match /quizzes/{quizId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }

    match /quiz_questions/{questionId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }

    // User profiles - users can read/update their own, admins can read/update all
    match /profiles/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId; // Allow user to create their own profile on signup
      // Admin can read/update all profiles
      allow read, update: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }

    // Student progress - users can read/write their own
    match /student_progress/{progressId} {
      allow read, create, update: if request.auth != null && request.auth.uid == request.resource.data.user_id;
      allow delete: if request.auth != null && request.auth.uid == request.resource.data.user_id; // Allow users to delete their own progress if needed
      // Admins can read all progress
      allow read: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }

    // Quiz attempts - users can read/write their own
    match /quiz_attempts/{attemptId} {
      allow read, create, update: if request.auth != null && request.auth.uid == request.resource.data.user_id;
      allow delete: if request.auth != null && request.auth.uid == request.resource.data.user_id; // Allow users to delete their own attempts if needed
      // Admins can read all attempts
      allow read: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }
  }
}