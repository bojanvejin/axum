rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Super admin UID for elmntmail@gmail.com
    function isSuperAdmin() {
      return request.auth.uid == 'xHj1ryfvHnNuCOcUTibcKfjT9x82';
    }

    // Checks if a user has an 'admin' role in their profile
    function hasAdminRole() {
      return exists(/databases/$(database)/documents/profiles/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }

    // GLOBAL SUPER ADMIN RULE:
    // This rule grants the super admin unconditional write access to everything.
    // It's evaluated alongside other rules, and since it's a direct "allow", it should permit the batch write.
    match /{document=**} {
      allow write: if isSuperAdmin();
    }

    // --- Specific Rules for other users ---

    // Profiles: Users can manage their own profile. Admins can manage any.
    match /profiles/{userId} {
      allow read, update: if request.auth.uid == userId || hasAdminRole();
      allow create: if request.auth.uid == userId;
      allow delete: if hasAdminRole();
    }

    // Curriculum Data is public to read, but only admins can modify it.
    match /phases/{phaseId}   { allow read: if true; allow write: if hasAdminRole(); }
    match /modules/{moduleId} { allow read: if true; allow write: if hasAdminRole(); }
    match /lessons/{lessonId} { allow read: if true; allow write: if hasAdminRole(); }
    match /quizzes/{quizId}   { allow read: if true; allow write: if hasAdminRole(); }
    match /quiz_questions/{questionId} { allow read: if true; allow write: if hasAdminRole(); }

    // Student-specific data can only be accessed by the student themselves or an admin.
    match /student_progress/{progressId} {
      allow read: if request.auth.uid == resource.data.user_id || hasAdminRole();
      allow create, update: if request.auth.uid == request.resource.data.user_id;
      allow delete: if hasAdminRole();
    }

    match /quiz_attempts/{attemptId} {
        allow read: if request.auth.uid == resource.data.user_id || hasAdminRole();
        allow create: if request.auth.uid == request.resource.data.user_id;
        allow update, delete: if hasAdminRole();
    }
  }
}